@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Yorum Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="TestimonialID" />
							<div class="form-group">
								<label for="TestimonialName">Referans Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialName" id="TestimonialName" placeholder="Referans Adı">

							</div>
							<div class="form-group">
								<label for="TestimonialTitle">Referans Ünvanını Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialTitle" id="TestimonialTitle" placeholder="Referans Ünvanı">

							</div>
							<div class="form-group">
								<label for="TestimonialImageUrl">Referans Resim URL'sini Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialImageUrl" id="TestimonialImageUrl" placeholder="Referans URL">

							</div>
							<div class="form-group">
								<label for="TestimonialComment">Referans Yorumunu Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialComment" id="TestimonialComment" placeholder="Referans Yorumu">

							</div>
							<div class="form-group">
								<label for="TestimonialStatus">Referans Yorumunun Durumu</label>
								<select class="form-control" asp-for="TestimonialStatus" id="TestimonialStatus">
									<option value="true">Aktif</option>
									<option value="false">Pasif</option>
								</select>
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Referans Yorum Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


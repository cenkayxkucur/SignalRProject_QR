@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSoicalMedia";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="SocialMediaID" />
							<div class="form-group">
								<label for="SocialMediaTitle">Başlık Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialMediaTitle" id="SocialMediaTitle" placeholder="Başlık Adı">
							</div>
							<div class="form-group">
								<label for="SocialMediaIconUrl">Sosyal Medyanın İkon URL'sini Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialMediaIconUrl" id="SocialMediaIconUrl" placeholder="Sosyal Medya İkon URL">
							</div>
							<div class="form-group">
								<label for="SocialMediaUrl">Sosyal Medyanın URL'sini Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialMediaUrl" id="SocialMediaUrl" placeholder="Sosyal Medya URL">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

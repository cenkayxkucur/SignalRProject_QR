@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
                            <input type="hidden" asp-for="DiscountID"/>
							<div class="form-group">
								<label for="DiscountTitle">İndirimli Ürün Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountTitle" id="DiscountTitle" placeholder="İndirimli Ürün">

							</div>
							<div class="form-group">
								<label for="DiscountAmount">İndirim Oranı Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountAmount" id="DiscountAmount" placeholder="İndirim Oranı">

							</div>
							<div class="form-group">
								<label for="DiscountImageUrl">İndirimli Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountImageUrl" id="DiscountImageUrl" placeholder="İndirimli Ürün Görseli">

							</div>

							<div class="form-group">
								<label for="DiscountDescription">İndirimli Ürün Açıklaması Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountDescription" id="DiscountDescription" placeholder="İndirimli Ürün Açıklaması">

							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İndirim Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>
